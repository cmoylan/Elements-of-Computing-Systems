/**
 * 16-bit incrementer: out = in + 1 (arithmetic addition)
 */

CHIP Inc16 {
    IN in[16];
    OUT out[16];

    PARTS:
    // Pass in a and 0000000000000001, represented as 15 falses and 1 true
    Add16(a=in, b[0]=true, b[1..15]=false, out=out);
}
